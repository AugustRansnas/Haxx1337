    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:gravity="center"
            android:id="@+id/lblTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grader"
            android:textSize="36sp"
            android:textColor="#D1CCBF" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/lblWindSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VindHastighet"
            android:textColor="#D1CCBF" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/lblWindDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vindriktning"
            android:textColor="#D1CCBF" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/lblWindGusts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vindbyar"
            android:textColor="#D1CCBF" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/lblVisibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sikt"
            android:textColor="#D1CCBF" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/lblTotalAmountOfClouds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moln"
            android:textColor="#D1CCBF" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/lblHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fuktighet"
            android:textColor="#D1CCBF" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:id="@+id/lblProbabilityOfThunder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Åska"
            android:textColor="#D1CCBF" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/lblSnow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snö"
            android:textColor="#D1CCBF" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/lblForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Form"
            android:textColor="#D1CCBF" />
        </LinearLayout>


</LinearLayout>